type Author {
  id: ID!
  name: String!
  posts: [Post]
 }
 
type Post {
  id: ID!
  title: String!
  body: String
  comments: [Comment]
}

 type Comment {
  id: ID!
  text: String
 }

schema {
  query: Query
  mutation: Mutation
}

type Query {
  allPosts: [Post]
  allAuthors: [Author]
}



type Mutation {
  addAuthor(name: String!) : Author
  removeAuthour(id: ID!): Author
  addPost(title: String!, body: String!, authorId: ID!): Post
}
